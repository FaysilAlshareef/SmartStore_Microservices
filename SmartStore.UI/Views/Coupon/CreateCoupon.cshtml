@model SmartStore.UI.Dtos.Coupon.CouponDto

@{
    ViewData["Title"] = "CreateCoupon";
}


<form asp-action="CreateCoupon" enctype="multipart/form-data">
    <div class="container">
        <h2 class="text-dark">Create Coupon</h2>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="CouponCode" class="control-label pt-2">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DiscountAmount" class="control-label pt-2">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="NumberOfCoupon" class="control-label">Number Of Coupon</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NumberOfCoupon" class="form-control" rows="5"/>
                <span asp-validation-for="NumberOfCoupon" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="NumberOfUsedCoupon" class="control-label">Number Of Used Coupon</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NumberOfUsedCoupon" class="form-control" rows="5"/>
                <span asp-validation-for="NumberOfUsedCoupon" class="text-danger"></span>
            </div>
  
            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn-secondary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
