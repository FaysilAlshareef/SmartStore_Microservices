@model SmartStore.UI.Dtos.Products.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}


<form asp-action="DeleteProduct" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="container">
        <h2 class="text-dark">Delete Product</h2>

        <hr />
        <div class="row">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" ></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Category" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Category" class="form-control" disabled />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Image" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" class="form-control" disabled />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Quantity" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantity" class="form-control" disabled />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-secondary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-primary form-control" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
